@model AmendmentDetails
@{
    var lineCount = 0;
}
<div>
    <h4>AmendmentDetails</h4>
    <hr />
    <dl class="row">
        <dt>
            @foreach (var line in Model.amendmentLines)
            {
                lineCount++;
                <p># @lineCount</p>
                <p style="display:block; border: solid black 1px" data-linenumber="@lineCount" title="indentation : @line.indentation hangingIndendation @line.hangingIndentation">
                    @line.text
                </p>
            }
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.explanatoryTextPrefix)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.explanatoryTextPrefix)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.explanatoryText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.explanatoryText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.amendmentLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.amendmentLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.mainHeader)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.mainHeader)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.amendmentId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.amendmentId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.amendmentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.amendmentType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.marshalledListText)
        </dt>
